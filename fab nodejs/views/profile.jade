extends layout

block content
    script. 
        $('.ul-nav .active').removeClass('active');
        $('.ul-nav .li-profile a').addClass('active');
    .container
      .reg-form-wrapper
        h1 Profile
        - if(stat == 1)
            script.
              alert("Password updated")
        form(method="POST" action="")
          .form-group
            label(for='nameInput') Name:
            input#nameInput.form-control(type='text', placeholder='Enter your name',name="name_input" value=me.name disabled)
          .form-group
            label(for='addressInput') House Name/No:
            input#addressInput.form-control(type='text', placeholder='Enter your address',name="address" value=me.address disabled)
          .form-group
            label(for='addressInput') Landmark:
            input#addressInput.form-control(type='text', placeholder='Enter your landmar',name="landmark"  value=me.landmark disabled)
          .form-group
            label(for='addressInput') City:
            input#addressInput.form-control(type='text', placeholder='Enter your city',name="city"  value=me.city disabled)
          .form-group
            label(for='addressInput') Pin:
            input#addressInput.form-control(type='text', placeholder='Enter your pin code',name="pin"  value=me.pin disabled)
          .form-group
            label(for='genderSelect') Gender:
            input#addressInput.form-control(type='text', placeholder='Enter your address',name="address" value=me.gender disabled)
          .form-group
            label(for='dobInput') Date of Birth:
            - var x = moment(me.date_of_birth).format('YYYY-MM-DD')
            input#dobInput.form-control(type='text',name="date_of_birth" value=x disabled)
          .form-group
            label(for='whatsappInput') WhatsApp Number:
            input#whatsappInput.form-control(type='tel', placeholder='Enter your WhatsApp number' name="whatsapp_num" value=me.whats_app_number disabled)
          .form-group
            label(for='emailInput') Email:
            input#emailInput.form-control(type='email', placeholder='Enter your email',name="email" value=me.email_id disabled)
          .form-group
            label(for='passwordInput') Password:
            input#password.form-control(type='password',name="password", placeholder='Enter New password', required)
          .form-group
            label(for='passwordInput') Confirm Password:
            input#conf-password.form-control(type='password',name="confpassword", placeholder='Confirm password', required)
          button.btn.btn-primary.edit-profile(type='submit') Update
